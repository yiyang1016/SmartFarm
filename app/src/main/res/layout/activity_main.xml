<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/greengradient"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btntemperature"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="40dp"
        android:background="#A8292828"
        android:drawableTop="@drawable/temperature"
        android:text="Temperature"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnhumidity"
        app:layout_constraintEnd_toStartOf="@+id/btnwheater"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnwheater"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="40dp"
        android:background="#A8292828"
        android:drawableTop="@drawable/wheather"
        android:text="Wheater"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnsecurity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btntemperature"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545" />

    <Button
        android:id="@+id/btnhumidity"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:background="#A8292828"
        android:drawableTop="@drawable/soilhumidity"
        android:text="Humidity"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnsecurity"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnsecurity"
        android:layout_width="200dp"
        android:layout_height="251dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:background="#A8292828"
        android:drawableTop="@drawable/security"
        android:text="Security"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnhumidity" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="149dp"
        android:layout_height="40dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="139dp"
        android:text="WELCOME"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>